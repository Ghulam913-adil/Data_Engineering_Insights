# SQL-Data-Cleaning for a Dataset Consisting of Information About Laid Off Employees During COVID

-- üóëÔ∏è Remove duplicate records based on certain criteria
WITH Duplicate_CTE AS (
    SELECT *,
           ROW_NUMBER() OVER (PARTITION BY company, industry, total_laid_off, percentage_laid_off, date, stage, country, funds_raised_millions ORDER BY company) AS r_num
    FROM layoffs_Staging
) 
DELETE FROM Duplicate_CTE
WHERE r_num > 1;

-- üóÉÔ∏è Create a new table for staging layoffs data
CREATE TABLE layoffs_staging2 (
    company TEXT,
    location TEXT,
    industry TEXT,
    total_laid_off INT DEFAULT NULL,
    percentage_laid_off TEXT,
    date TEXT,
    stage TEXT,
    country TEXT,
    funds_raised_millions INT DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci;

-- üìù Populate the new table with cleaned data
INSERT INTO layoffs_staging2
SELECT company, location, industry, total_laid_off, percentage_laid_off, date, stage, country, funds_raised_millions
FROM layoffs_Staging;

-- üîç Retrieve distinct industry values from the staging table
SELECT DISTINCT industry
FROM layoffs_staging2
ORDER BY industry;

-- ‚úÇÔ∏è Remove trailing dots from the country names
UPDATE layoffs_staging2
SET country = TRIM(TRAILING '.' FROM country)
WHERE country LIKE '%';

-- üìÖ Convert the date strings to proper date format
UPDATE layoffs_staging2
SET date = STR_TO_DATE(date, '%m/%d/%Y');

-- üîÑ Update missing industry values based on company matches
UPDATE layoffs_staging2 t1
JOIN layoffs_staging2 t2 ON t1.company = t2.company
SET t1.industry = t2.industry
WHERE t1.industry IS NULL
  AND t2.industry IS NOT NULL;

-- üÜë Set industry values to NULL where they are empty
UPDATE layoffs_staging2
SET industry = NULL
WHERE industry = '';

-- üö´ Remove records with missing total_laid_off and percentage_laid_off values
DELETE FROM layoffs_staging2
WHERE total_laid_off IS NULL
  AND percentage_laid_off IS NULL;

-- üîç Retrieve the maximum total laid off and the maximum percentage laid off from 'layoffs_staging2' table
SELECT 
    MAX(total_laid_off) AS max_total_laid_off, 
    MAX(CAST(REPLACE(percentage_laid_off, '%', '') AS DECIMAL(5,2))) AS max_percentage_laid_off
FROM layoffs_staging2;

-- üìä Retrieve company names and the sum of total laid off employees, grouped by company and ordered by the sum in descending order
SELECT 
    company, 
    SUM(total_laid_off) AS total_laid_off_sum
FROM layoffs_staging2
GROUP BY company
ORDER BY total_laid_off_sum DESC;

-- üìÖ Retrieve the year and the sum of total laid off employees, grouped by year and ordered by the sum in descending order
SELECT 
    YEAR(date) AS year, 
    SUM(total_laid_off) AS total_laid_off_sum
FROM layoffs_staging2
GROUP BY YEAR(date)
ORDER BY total_laid_off_sum DESC;

-- üìà Calculate rolling total of lost jobs per month
WITH Rolling_total AS (
    SELECT 
        DATE_FORMAT(date, '%Y-%m') AS Month, 
        SUM(total_laid_off) AS Lost_Jobs
    FROM layoffs_staging2
    WHERE DATE_FORMAT(date, '%Y-%m') IS NOT NULL
    GROUP BY Month
    ORDER BY Month
)
SELECT 
    Month, 
    Lost_Jobs,
    SUM(Lost_Jobs) OVER (ORDER BY Month) AS Rolling_Total
FROM Rolling_total;

-- üìÜ Retrieve company names, year, and the sum of total laid off employees, grouped by company and year, ordered by company in descending order
SELECT 
    company, 
    YEAR(date) AS year, 
    SUM(total_laid_off) AS total_laid_off_sum
FROM layoffs_staging2
GROUP BY company, YEAR(date)
ORDER BY company DESC;

-- üèÜ Retrieve top 5 companies with the highest total laid off employees for each year
WITH Company_Year AS (
    SELECT 
        company, 
        YEAR(date) AS year, 
        SUM(total_laid_off) AS total_laid_off
    FROM layoffs_staging2
    GROUP BY company, YEAR(date)
), Company_year_Rank AS (
    SELECT 
        *,
        DENSE_RANK() OVER (PARTITION BY year ORDER BY total_laid_off DESC) AS Ranking
    FROM Company_Year
    WHERE year IS NOT NULL
)
SELECT * 
FROM Company_year_Rank
WHERE Ranking <= 5;

-- ‚öôÔ∏è Additional efficient queries for data analysis:

-- üìâ Calculate the average number of layoffs per company
SELECT 
    company, 
    AVG(total_laid_off) AS avg_total_laid_off
FROM layoffs_staging2
GROUP BY company
ORDER BY avg_total_laid_off DESC;

-- üìÜ Find the month with the highest number of layoffs
SELECT 
    DATE_FORMAT(date, '%Y-%m') AS month, 
    SUM(total_laid_off) AS total_laid_off
FROM layoffs_staging2
GROUP BY month
ORDER BY total_laid_off DESC
LIMIT 1;

-- üåé Analyze layoffs by country and industry
SELECT 
    country, 
    industry, 
    SUM(total_laid_off) AS total_laid_off
FROM layoffs_staging2
GROUP BY country, industry
ORDER BY total_laid_off DESC;

-- üìä Calculate the percentage of layoffs per industry
SELECT 
    industry, 
    SUM(total_laid_off) AS total_laid_off,
    (SUM(total_laid_off) / (SELECT SUM(total_laid_off) FROM layoffs_staging2) * 100) AS percentage_laid_off
FROM layoffs_staging2
GROUP BY industry
ORDER BY total_laid_off DESC;
